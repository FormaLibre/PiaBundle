{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% block section_content %}
    <div class="panel-heading">
        <span  class="pull-right">
            <a href="{{ path('formalibrePiaPrintableFiche', {'user': user.getId()}) }}">
                <i class="fa fa-eye"></i>
            </a>
            <a href="{{ path('formalibrePiaFichePrint', {'user': user.getId()}) }}">
                <i class="fa fa-print"></i>
            </a>
        </span>
        <h1>
            Plan individuel d'apprentissage de {{ user.getFirstName() }} {{ user.getLastName() }}
        </h1>
    </div>
    <div class="panel-body">
        <div class="col-xs-8">
            <div class="row">
                <div class="panel panel-default piaWidget">
                    <p>Tél parents :</p>
                    <p>Date de naissance :</p>
                </div>
            </div>
            <div class="row">
                <div class="panel panel-default piaWidget">
                    {{ render(controller('FormaLibrePiaBundle:Pia:pirWidget', { 'user': user.getId() } )) }}
                </div>
            </div>
            <div class="row">
                <div class="panel panel-default piaWidget">
                    {{ render(controller('FormaLibreBulletinBundle:Bulletin:bulletinWidget', { 'user': user.getId() } )) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="panel panel-default piaWidget">
                        <div class="panel-heading">Présence</div>
                        <div class="panel-body">
                            {{ render(controller('FormaLibreBulletinBundle:Bulletin:bulletinPresenceWidget', { 'user': user.getId() } )) }}
                        </div>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="panel panel-default piaWidget">
                        <div class="panel-heading">Comportement</div>
                        <div class="panel-body">
                            {{ render(controller('FormaLibreBulletinBundle:Bulletin:bulletinComportementWidget', { 'user': user.getId() } )) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-4">
            <div class="row">
                <div class="panel panel-default center" style="margin-left: 15px">
                    {% if user.getPicture() %}
                        <img src="{{ asset('uploads/pictures/') ~ user.getPicture() }}" />
                    {% else %}
                        <i class="fa fa-user fa-6"></i>
                    {% endif %}

                </div>
            </div>
            <div class="row">
                <div class="panel panel-default center piaWidget" style="margin-left: 15px">
                    <div class="panel-heading">Tag <i class="fa fa-plus-circle"></i></div>
                    <div class="panel-body">Urgent</div>
                </div>
            </div>
            <div class="row">
                <div class="panel panel-default piaWidget" style="margin-left: 15px">
                    <div class="panel-heading center">
                        Autres constats
                        <i class="fa fa-plus-circle pointer-hand"
                           id="constat-create-btn"
                           data-user-id="{{ user.getId() }}"
                        >    
                        </i>
                    </div>
                    <div class="panel-body" id="constat-body-box">
                        {% for constat in constats %}
                            {% set constatId = constat.getId() %}
                            <div id="constat-box-{{ constatId }}">
                                <i class="delete-constat-btn fa fa-times close"
                                   data-constat-id="{{ constatId }}"
                                >
                                </i>
                                <span class="close">&nbsp;</span>
                                <i class="edit-constat-btn fa fa-pencil close"
                                   data-constat-id="{{ constatId }}"
                                >    
                                </i>
                                {{ constat.getContent()|raw }}
                                <small class="text-muted">
                                    Créé le {{ constat.getCreationDate()|intl_date_format }}.
                                    
                                    {% if constat.getEditionDate() is not empty %}
                                        Dernière modification: {{ constat.getEditionDate()|intl_date_format }}.
                                    {% endif %}
                                </small>
                            </div>
                                
                            {% if not loop.last %}
                                <hr id="constat-separator-{{ constatId }}">
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="panel panel-default piaWidget" style="margin-left: 15px">
                    <div class="panel-heading center">
                        Points divers
                    </div>
                    <div class="panel-body">
                        {{ render(controller('FormaLibreBulletinBundle:Bulletin:bulletinPointsDiversWidget', { 'user': user.getId() } )) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- box pour l'ajout -->
    <div id="form-modal-box" class="modal fade" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 id="form-modal-title"></h3>
                </div>
                <div id="form-modal-body" class="modal-body">
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/formalibrepia/css/piaFiche.css')}}"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script
            src='{{ asset('bundles/formalibrepia/js/fiche.js') }}'
            type="text/javascript">
    </script>
{% endblock %}